<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Amenities
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

              <div class="row form-group">
                <div class="col-md-4">
                  <%= f.check_box :is_washing %> Washing in unit
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_cooking %> Allows Cooking
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_wifi %> Wifi
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-4">
                  <%= f.check_box :is_furnished %> Furnished
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_ac %> Air Conditioning
                </div>
              </div>
              <br/><br/>

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-form" %>
              </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
