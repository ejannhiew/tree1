<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Tenants", your_rentals_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Landowners", your_landowners_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Landowners
      </div>
      <div class="panel-body">

        <% @landowners.each do |landowner| %>
          <div class="row">
            <div class="col-md-2">
              <%= landowner.start_date.strftime('%v')%>
            </div>
            <div class="col-md-2">
              <%= link_to room_path(landowner.room) do%>
                <%= image_tag landowner.room.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-5">
              <%= link_to landowner.room.listing_name, room_path(landowner.room) %><br/><br/>
              <span>
                <%= image_tag avatar_url(landowner.room.user), class: "img-circle avatar-small"%>
                <%= link_to user_path(landowner.room.user) do %>
                    <%= landowner.room.user.fullname %>
                <% end %>
              </span>
            </div>
            <div class="col-md-3 text-right">
              <%= render partial: "reviews/tenant_form", locals: {rental: landowner}%>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>
